# Shamelessly copied from https://github.com/mathiasbynens/dotfiles/blob/master/.bash_prompt

# COLORS!
if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		MAGENTA=$(tput setaf 9)
		ORANGE=$(tput setaf 172)
		# GREEN=$(tput setaf 190)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 141)
		WHITE=$(tput setaf 15)
	else
		MAGENTA=$(tput setaf 5)
		ORANGE=$(tput setaf 4)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 1)
		WHITE=$(tput setaf 7)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	MAGENTA="\e[1;31m"
	ORANGE="\e[1;33m"
	GREEN="\e[1;32m"
	PURPLE="\e[1;35m"
	WHITE="\e[1;37m"
	BOLD=""
	RESET="\e[m"
fi

export MAGENTA
export ORANGE
export GREEN
export PURPLE
export WHITE
export BLUE="\e[1;34m"
export BOLD
export RESET

DEFAULT_USER='tringuyen'

# Git info
function parse_git_dirty() {
	[[ $(git status 2> /dev/null | tail -n1) != *"working directory clean"* ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}


# include this if want to display more information about user
USER="\[${BOLD}${MAGENTA}\]\u \[$WHITE\]at \[$ORANGE\]\h \[$WHITE\]in"

# Interaction prompt
export PS1="\[$BLUE\]\w\[$WHITE\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \" )\[$PURPLE\]\$(parse_git_branch)\[$WHITE\]\n \[$PURPLE\]❯ \[$RESET\]"

# Continuation interaction prompt
export PS2="\[$ORANGE\]→ \[$RESET\]"